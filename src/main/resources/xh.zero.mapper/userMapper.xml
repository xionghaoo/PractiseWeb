<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xh.zero.aop.UserMapper">

    <sql id="selectAll">
        select * from sys_user
    </sql>

    <insert id="save" parameterType="user">
        insert into sys_user values (null, #{username}, #{email}, #{password}, #{phoneNum}, #{birthday})
    </insert>
    <resultMap id="userMap" type="user">
        <id property="id" column="uid"/>
        <id property="username" column="username"/>
        <id property="email" column="email"/>
        <id property="password" column="password"/>
        <id property="phoneNum" column="phoneNum"/>
        <id property="birthday" column="birthday"/>
        <collection property="orders" javaType="list" ofType="order">
            <id property="id" column="oid"/>
            <id property="order_time" column="order_time"/>
            <id property="order_no" column="order_no"/>
        </collection>
    </resultMap>
    <select id="findAll" resultMap="userMap">
        select *, o.id oid from sys_user u inner join orders o on u.id = o.uid;
    </select>
    <select id="findById" parameterType="int" resultType="user">
        select * from sys_user where id=#{id}
    </select>

    <select id="findByCondition" parameterType="user" resultType="user">
        <include refid="selectAll"/>
        <where>
            <if test="id!=null">
                and id=#{id}
            </if>
            <if test="username!=null">
                and username=#{username}
            </if>
        </where>
    </select>

    <select id="findByIds" parameterType="list" resultType="user">
        <include refid="selectAll"/>
        <where>
            <foreach collection="list" open="id in(" close=")" item="id" separator=",">
                #{id}
            </foreach>
        </where>
    </select>
</mapper>